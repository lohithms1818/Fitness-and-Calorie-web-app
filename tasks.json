{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/FitnessApp.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/FitnessApp.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/FitnessApp.API/FitnessApp.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "add-migration",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationName}",
                "--project",
                "${workspaceFolder}/src/FitnessApp.Infrastructure",
                "--startup-project",
                "${workspaceFolder}/src/FitnessApp.API"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "update-database",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "${workspaceFolder}/src/FitnessApp.Infrastructure",
                "--startup-project",
                "${workspaceFolder}/src/FitnessApp.API"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "description": "Name of the migration",
            "default": "NewMigration",
            "type": "promptString"
        }
    ]
}
